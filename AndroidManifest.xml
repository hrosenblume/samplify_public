<?xml version="1.0" encoding="utf-8"?>
<manifest android:versionCode="5" android:versionName="1.1.0" package="com.mhacks.samplify"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="18" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application android:theme="@android:style/Theme.NoTitleBar" 
        android:label="@string/app_name" 
        android:icon="@drawable/ic_launcher" 
        android:debuggable="false" 
        android:allowBackup="true">
        <activity android:label="@string/app_name" 
            android:name="com.mhacks.samplify.MainActivity" 
            android:screenOrientation="portrait" 
            android:configChanges="keyboardHidden|orientation">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity android:label="@string/title_activity_sample_results" android:name="com.mhacks.samplify.SampleResults" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation" />
        <activity android:label="@string/title_activity_web_view" android:name="com.mhacks.samplify.WebView" android:screenOrientation="portrait" />
        <activity android:label="@string/title_activity_results_page" android:name="com.mhacks.samplify.ResultsPage" android:screenOrientation="portrait" />
    </application>
</manifest>
